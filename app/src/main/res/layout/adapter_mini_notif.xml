<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="45sp"

                android:background="@drawable/mini_notif"
                android:paddingRight="5sp">

	<TextView
		android:id="@+id/adapter_mini_notif_title"
		android:layout_width="match_parent"
		android:layout_height="50sp"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		android:paddingLeft="15sp"
		android:paddingTop="5sp"
		android:text="HEADING"
		android:textColor="@color/bootstrap_gray_lighter"
		android:textSize="10sp"/>

	<TextView
		android:id="@+id/adapter_mini_notif_date"
		android:layout_width="wrap_content"
		android:layout_height="25sp"
		android:layout_alignParentBottom="true"
		android:layout_alignParentEnd="true"
		android:text="DATE"
		android:textColor="@color/bootstrap_gray_light"
		android:textSize="10sp"/>
</RelativeLayout>